@using System.Web.Optimization
<link href="~/assets/js/ztree/zTreeStyle.css" rel="stylesheet" />
<link href="~/assets/js/ztree/metro.css" rel="stylesheet" />
<div class="row" ng-app="mainApp">
    <div class="col-xs-3 col-md-3">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">目录树</span>
            </div>
            <div class="widget-body">
                <div id="catalogTree" class="ztree">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-9 col-md-9">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">文章列表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a href="javascript:void(0);" class="btn btn-primary " id="newArticle">
                        <i class="fa  fa-plus"></i> 新增
                    </a>
                </div>
                <div id="articleGrid"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="submitForm">
    <form id="form" class="form-horizontal" name="form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">名称</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="名称" name="name" value="${Name}"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">排序</label>
                    <div class="col-sm-10">
                        <div class="spinbox spinbox-horizontal spinbox-right">
                            <div class="spinbox-buttons	btn-group">
                                <button type="button" class="btn spinbox-down blueberry">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn spinbox-up purple">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <input type="text" class="spinbox-input form-control" placeholder="排序" required name="order" value="${Order}">
                        </div>
                        <input type="hidden" value="${Id}" name="id"/>
                        <input type="hidden" value="${ParentId}" name="parentId"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">内容</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="内容" name="content" value="${Content}" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">
                    <small class="help-block" style="display: block;"></small>
                </div>
            </div>
        </div>
    </form>
</script>
<script type="text/template" id="table">
    <table class="table table-striped table-hover table-bordered" style="width:60%">
        <thead>
            <tr role="row">
                <th>
                    文章名称
                </th>
                <th style="width:60px;">
                    排序
                </th>
                <th style="width:200px;">
                </th>
            </tr>
        </thead>
        <tbody>
            {%each data.Datas as it}
            <tr>
                <td>${it.Name}</td>
                <td>${it.Order}</td>
                <td>
                    <a href="javascript:void(0)" class="btn   edit" onclick=" editArticle('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteArticle('${it.Id}','${it.Name}') "><i class="fa fa-trash-o"></i> 删除</a>
                </td>
            </tr>
            {%/each}
        </tbody>
        {%include  "#tfoot",data}
    </table>
</script>
<script src="~/assets/js/ztree/jquery.ztree.core-3.5.js"></script>
<script src="~/assets/js/fuelux/spinbox/fuelux.spinbox.min.js"></script>
<script src="~/assets/js/app/article.js"></script>


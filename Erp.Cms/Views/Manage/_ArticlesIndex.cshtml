@using System.Web.Optimization
<div class="row" ng-app="mainApp">
    <div class="col-xs-3 col-md-3">
        <div class="widget">
            <div class="widget-header bg-green">
                <span class="widget-caption">目录树</span>
            </div>
            <div class="widget-body">
                <div id="catalogTree" class="ztree">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-9 col-md-9">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">文章列表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <button class="btn btn-primary" id="newArticle" disabled="disabled"><i class="fa  fa-plus"></i> 新增</button>
                </div>
                <div id="articleGrid" class="row"></div>

            </div>
        </div>
    </div>
</div>

<script type="text/template" id="table">
    <div class="col-md-7">
        <table class="table table-striped table-hover table-bordered" >
            <thead>
                <tr role="row">
                    <th>
                        文章名称
                    </th>
                    <th style="width:60px;">
                        排序
                    </th>
                    <th style="width:200px;">
                    </th>
                </tr>
            </thead>
            <tbody>
                {%each data.Datas as it}
                <tr>
                    <td>${it.Name}</td>
                    <td>${it.Order}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn   edit" onclick=" editArticle('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
                        <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteArticle('${it.Id}','${it.Name}') "><i class="fa fa-trash-o"></i> 删除</a>
                    </td>
                </tr>
                {%/each}
            </tbody>
            {%include  "#tfoot",data}
        </table>
    </div>
</script>
<script src="~/assets/js/ueditor/ueditor.config.js"></script>
<script src="~/assets/js/ueditor/ueditor.all.js"></script>
<script src="~/assets/js/app/article.js"></script>


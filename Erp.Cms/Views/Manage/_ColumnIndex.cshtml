@using System.Web.Optimization
<div class="row" ng-app="mainApp">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">栏目列表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a href="javascript:void(0);" class="btn btn-danger btn-xs" id="newColumn">
                        <i class="fa  fa-plus"></i> 新增
                    </a>
                    <div class="btn-group pull-right">
                        <a class="btn btn-default" href="javascript:void(0);">Tools</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu dropdown-default">
                            <li>
                                <a href="javascript:void(0);">Action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Another action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Something else here</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="javascript:void(0);">Separated link</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="cloumnGrid">
                    <thead>
                    <tr role="row">
                        <th >
                            栏目名称
                        </th>
                        <th>
                            排序
                        </th>
                       <th>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    {%each Data as it}
    <tr>
        <td>${it.Name}</td>
        <td>${it.Order}</td>
        <td>
            <a href="javascript:void(0)" class="btn btn-info btn-xs edit" onclick=" editColumn('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
            <a href="javascript:void(0)" class="btn btn-danger btn-xs " onclick=" deleteColumn('${it.Id}') "><i class="fa fa-trash-o"></i> 删除</a>
        </td>
    </tr>
    {%/each}
</script>
<script type="text/html" id="submitForm">
    <form id="form" name="form">         
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">                     
                    <input type="text" class="form-control" placeholder="名称" name="name" value="${Name}"/>                     
                </div>
            </div>
        </div><div class="row">
            <div class="col-md-12">                 
                <div class="form-group">
                    <input type="text" class="form-control " placeholder="排序" required name="order" value="${Order}"      /> 
                    <input type="hidden" value="${Id}" name="id"/>
                </div>
            </div>
        </div>
    <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">                     
                    <small class="help-block" style="display: block;"></small>
                </div>
            </div>
        </div>
    </form>
</script>
<script src="~/assets/js/app/column.js"></script>




@using System.Web.Optimization
<div class="row" ng-app="mainApp">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">栏目列表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a href="javascript:void(0);" class="btn btn-danger btn-xs" id="newColumn">
                        <i class="fa  fa-plus"></i> 新增
                    </a>
                </div>
                <div id="columnGrid"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <table class="table table-striped table-hover table-bordered" style="width:50%">
        <thead>
            <tr role="row">
                <th>
                    栏目名称
                </th>
                <th style="width:60px;">
                    排序
                </th>
                <th style="width:140px;">
                </th>
            </tr>
        </thead>
        <tbody>
            {%each Datas as it}
            <tr>
                <td>${it.Name}</td>
                <td>${it.Order}</td>
                <td>
                    <a href="javascript:void(0)" class="btn btn-info btn-xs edit" onclick=" editColumn('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:void(0)" class="btn btn-danger btn-xs " onclick=" deleteColumn('${it.Id}') "><i class="fa fa-trash-o"></i> 删除</a>
                </td>
            </tr>
            {%/each}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="DTTTFooter">
                    <div class="col-sm-6"><div class="dataTables_info" id="simpledatatable_info" role="status" aria-live="polite"> ${(PageIndex-1)*5+1} - ${(PageIndex-1)*5+Datas.length} / ${Total} </div></div>
                    <div class="col-sm-6"><div class="dataTables_paginate paging_bootstrap" id="simpledatatable_paginate"><ul class="pagination">
                        <li class="prev {%if(IsFirst)}  disabled {%/if}"><a  href="javascript:void(0)" onclick="bindColumns(${PageIndex-1})">上一页</a></li>
                        {%each ShowIndex as index}<li class=" {%if(PageIndex===index)}  active {%/if}" ><a href="javascript:void(0)" onclick="bindColumns(${index})">${index}</a></li>{%/each}
                        <li class="next {%if(IsLast)} disabled{%/if}"><a href="javascript:void(0)" onclick="bindColumns(${PageIndex+1})">下一页</a></li></ul></div></div>
                </td>
            </tr>
        </tfoot>
    </table>

</script>
<script type="text/html" id="submitForm">
    <form id="form" name="form">         
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">                     
                    <input type="text" class="form-control" placeholder="名称" name="name" value="${Name}"/>                     
                </div>
            </div>
        </div><div class="row">
            <div class="col-md-12">                 
                <div class="form-group">
                    <input type="text" class="form-control " placeholder="排序" required name="order" value="${Order}"      /> 
                    <input type="hidden" value="${Id}" name="id"/>
                </div>
            </div>
        </div>
    <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">                     
                    <small class="help-block" style="display: block;"></small>
                </div>
            </div>
        </div>
    </form>
</script>
<script src="~/assets/js/app/column.js"></script>
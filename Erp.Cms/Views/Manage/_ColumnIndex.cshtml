@using System.Web.Optimization
<div class="row" ng-app="mainApp">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">栏目列表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a href="javascript:void(0);" class="btn btn-primary " id="newColumn">
                        <i class="fa  fa-plus"></i> 新增
                    </a>
                </div>
                <div id="columnGrid"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <table class="table table-striped table-hover table-bordered" style="width:60%">
        <thead>
            <tr role="row">
                <th>
                    栏目名称
                </th>
                <th style="width:60px;">
                    排序
                </th>
                <th style="width:200px;">
                </th>
            </tr>
        </thead>
        <tbody>
            {%each data.Datas as it}
            <tr>
                <td>${it.Name}</td>
                <td>${it.Order}</td>
                <td>
                    <a href="javascript:void(0)" class="btn   edit" onclick=" editColumn('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteColumn('${it.Id}','${it.Name}') "><i class="fa fa-trash-o"></i> 删除</a>
                </td>
            </tr>
            {%/each}
        </tbody>
      {%include  "#tfoot",data}
    </table>

</script>
<script type="text/html" id="submitForm">
    <form id="form" class="form-horizontal" name="form">
        <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">名称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="名称" name="name" value="${Name}"/>
                    </div>
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">排序</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control " placeholder="排序" required name="order" value="${Order}" />
                        <input type="hidden" value="${Id}" name="id" />
                    </div>
                </div>
            </div>
        </div>
    <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">                     
                    <small class="help-block" style="display: block;"></small>
                </div>
            </div>
        </div>
    </form>
</script>
<script src="~/assets/js/app/column.js"></script>
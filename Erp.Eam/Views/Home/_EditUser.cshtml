@using Microsoft.AspNet.Identity.EntityFramework
@model Erp.Eam.Business.ApplicationUser

<form id="form" class="form-horizontal" name="form">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">登录名</label>
                <div class="col-sm-10">
                    <span class="input-icon icon-right">
                    @if (string.IsNullOrWhiteSpace(Model.Id))
                    {
                        <input type="text" class="form-control" placeholder="登录名" name="loginName" value="@Model.UserName" />
                    }
                    else
                    {
                        <input type="text" class="form-control" name="loginName" value="@Model.UserName" readonly="readonly" />
                    }
                        <i class="glyphicon glyphicon-user blue"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">全名</label>
                <div class="col-sm-10">
                    <span class="input-icon icon-right">
                        <input type="text" class="form-control" placeholder="全名" name="fullName" value="@Model.FullName" />
                        <i class="glyphicon glyphicon-user blue"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">密码</label>
                <div class="col-sm-10">
                    <span class="input-icon icon-right">
                        <input type="password" class="form-control" placeholder="密码" name="password" />
                        <i class="glyphicon glyphicon-lock blue"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">确认密码</label>
                <div class="col-sm-10">
                    <span class="input-icon icon-right">
                        <input type="password" class="form-control" placeholder="确认密码" name="confirmPassword" />
                        <i class="glyphicon glyphicon-lock blue"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">角色</label>
                <div class="col-sm-10">
                    <div class="row">
                    @foreach(var role in  (List<IdentityRole>)ViewBag.Roles)
                    {
                        <div class="col-lg-4 col-sm-4 col-xs-4">
                            <div class="checkbox">
                                <label>
                              
                                           @if (Model.Roles.Select(r => r.RoleId).Contains(role.Id))
                                           {
                                            <input name="roleIds" type="checkbox" value="@role.Id" checked="checked">
                                           }
                                           else
                                           {
                                            <input name="roleIds" type="checkbox" value="@role.Id" >
                                           }
                                    <span class=" text">@role.Name</span>
                                </label>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="unknownError" style="display: none;">
        <div class="col-md-12">
            <div class="form-group  has-feedback has-error">
                <div class="col-md-10 col-md-offset-2">
                    <small class="help-block"></small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
        </div>
    </div>
</form>
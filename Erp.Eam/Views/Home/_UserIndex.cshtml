@using System.Web.Optimization
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-primary">
                    <span class="widget-caption">用户列表</span>
                </div>
                <div class="widget-body">
                    <div class="table-toolbar">
                        <a href="javascript:void(0);" class="btn btn-primary " id="newUser">
                            <i class="fa  fa-plus"></i> 新增
                        </a>
                    </div>
                    <div id="userGrid" class="row"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <div class="col-md-7">
        <table class="table table-striped table-hover table-bordered ">
            <thead>
                <tr role="row">
                    <th>
                        登录名
                    </th>
                    <th style="width:60px;">
                        用户名
                    </th>
                    <th style="width:100px;">
                        角色
                    </th>
                    <th style="width:200px;">
                    </th>
                </tr>
            </thead>
            <tbody>
                {%each data.Datas as it}
                <tr>
                    <td>${it.LoginName}</td>
                    <td>${it.FullName}</td>
                    <td>${it.Roles}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn   edit" onclick=" editUser('${it.Id}') "><i class="fa fa-edit"></i> 编辑</a>
                        <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteUser('${it.Id}','${it.Name}') "><i class="fa fa-trash-o"></i> 删除</a>
                    </td>
                </tr>
                {%/each}
            </tbody>
            {%include  "#tfoot",data}
        </table>
    </div>
</script>
<script type="text/html" id="submitForm">
    <form id="form" class="form-horizontal" name="form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">登录名</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="登录名" name="loginName" value="${LoginName}"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">全名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="全名" name="fullName" value="${FullName}"/>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">密码</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="密码" name="password" />
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">确认密码</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="确认密码" name="confirmPassword"  />
                </div>
            </div>
        </div>
        <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">
                    <div class="col-md-10 col-md-offset-2">
                        <small class="help-block"></small>
                    </div>
                </div>
            </div>
        </div>
    </form>
</script>
<script src="~/assets/js/app/user.js"></script>
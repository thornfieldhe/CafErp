@using System.Web.Optimization
@using Erp.Eam.Models
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">商品管理</span>
            </div>
            <div class="widget-body">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-xs-6">
                        <div class="tabbable">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newItem">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="itemGrid" class="row"></div>
                                        </div>
                                    </div>
                        </div>
                        <div class="horizontal-space"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered ">
            <thead>
                <tr role="row">
                    <th style="width:150px;">
                        商品编号
                    </th>
                    <th style="width:300px;">
                        商品名称
                    </th>
                    <th>
                        单位
                    </th>
                    <th>
                        商品类别
                    </th>
                    <th>
                        商品颜色
                    </th>
                    <th style="width:200px;">
                    </th>
                </tr>
                <tr role="row">
                    <th>
                        <input  type="text" class="form-control" id="searchCode" placeholder="商品编号"/>
                    </th>
                    <th>    
                        <input type="text" class="form-control" id="searchName" placeholder="商品名称" /> 
                    </th>
                    <th>
                        <select id="e1"  style="width:100%">
                            @{
                                foreach (var item in Info.ToSelectItems(InfoCategory.Unit))
                                {
                                    <option value="@item.Item1">@item.Item2</option>
                                }
                            }
                        </select>
                    </th>
                    <th   style="width:150px">
                        <select id="e1" style="width:100%">
                            @{
                                foreach (var item in ProductCategory.ToSelectItems())
                                {
                                    <option value="@item.Item1">@item.Item2</option>
                                }
                            }
                        </select>
                    </th>
                    <th>
                        <select id="e3" style="width:100%">
                           @{
                               foreach (var item in Info.ToSelectItems(InfoCategory.Color))
                               {
                               <option value = "@item.Item1" >@item.Item2</option>
                               }
                           }
                        </select>
                    </th>
                    <th>
                        <a href="javascript:void(0)" class="btn btn-danger " ><i class="fa fa-search"></i> 搜索</a>
                        <a href="javascript:void(0)" class="btn   " ><i class="fa fa-times"></i> 重置</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {%each data.Datas as it}
                <tr>
                    <td>${it.Code}</td>
                    <td>${it.Name}</td>
                    <td>${it.Unit}</td>
                    <td>${it.CategoryName}</td>
                    <td>${it.ColerName}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn   edit" onclick=" editItem('${it.Id}','${it.Name}','${data.callback}') "><i class="fa fa-edit"></i> 编辑</a>
                        <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteInfo('${it.Id}','[${it.Name}]','${data.callback}') "><i class="fa fa-trash-o"></i> 删除</a>
                    </td>
                </tr>
                {%/each}
            </tbody>
            {%include  "#tfoot",data}
        </table>
    </div>
</script>
<script src="~/assets/js/select2/select2.js"></script>
<script src="~/assets/js/app/product.js"></script>

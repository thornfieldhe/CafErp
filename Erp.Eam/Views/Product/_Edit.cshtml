@using Microsoft.AspNet.Identity.EntityFramework
@model Erp.Eam.Models.Product
<form id="form" class="form-horizontal" name="form">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">商品编号</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="商品编号" name="code" value="@Model.Code"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">商品名称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="商品名称" name="name" value="@Model.Name"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">单位</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="单位" name="unit" value="@Model.Unit"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">辅助单位</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="辅助单位" name="unit2" value="@Model.Unit2"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">商品类别</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="商品类别" name="categoryId" value="@Model.CategoryId"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">商品颜色</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="商品颜色" name="colorId" value="@Model.ColorId"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">单位换算</label>
                <div class="col-sm-10">
                    <input type="text" class="spinbox-input form-control" placeholder="单位换算" name="conversion" value="@Model.Conversion"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="unknownError" style="display: none;">
        <div class="col-md-12">
            <div class="form-group  has-feedback has-error">
                <div class="col-md-10 col-md-offset-2">
                    <small class="help-block"></small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" class="form-control" name="id" value="@Model.Id"/>
        </div>
    </div>
</form>

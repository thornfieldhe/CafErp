<link href="~/assets/js/dropzone/dropzone.css" rel="stylesheet" />
<div class="row" >
    <div class="col-xs-6 col-md-6">
        <div class="widget">
            <div class="widget-header bg-green">
                <span class="widget-caption">上传图片</span>
            </div>
            <div class="widget-body" id="dropzone">
                <form action="/Manage/UploadImages" class="dropzone">
                    <div class="fallback">
                        <input name="file" type="file" multiple="" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-md-6">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">轮播图列表</span>
            </div>
            <div class="widget-body">
                <div id="slideGrid" class="row"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered ">
            <thead>
                <tr role="row">
                    <th>
                        图片名称
                    </th>
                    <th style="width:120px;">
                        轮播频次
                    </th>
                    <th style="width:120px;">
                        创建时间
                    </th>
                    <th style="width:90px;">
                    </th>
                </tr>
            </thead>
            <tbody>
                {%each data.Datas as it}
                <tr>
                    <td>${it.FileName}</td>
                    <td class="editRow">
                        <div class="disp">${it.Rate}</div>
                        <div class="edit" style="display:none">
                                <input type="text" class="spinbox-input form-control" placeholder="频次" required name="rate" value="${it.Rate}" id="${it.Id}">
                        </div>
                    </td>
                    <td>${it.CreatedDate}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteSlide('${it.Id}','${it.FileName}') "><i class="fa fa-trash-o"></i> 删除</a>
                    </td>
                </tr>
                {%/each}
            </tbody>
            {%include  "#tfoot",data}
        </table>
    </div>
       

</script>
<script src="~/assets/js/dropzone/dropzone.js"></script>
<script src="~/assets/js/app/slide.js"></script>
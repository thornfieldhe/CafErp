@using System.Web.Optimization
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">综合信息设置</span>
            </div>
            <div class="widget-body">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-xs-6">
                        <div class="tabbable">
                            <ul class="nav nav-tabs" id="myTab">
                                <li class="active">
                                    <a data-toggle="tab" href="#unit" aria-expanded="false">
                                        商品单位
                                    </a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#specification" aria-expanded="true">
                                        商品规格
                                    </a>
                                </li>
                                <li >
                                    <a data-toggle="tab" href="#color" aria-expanded="false">
                                        商品颜色
                                    </a>
                                </li>
                                <li >
                                    <a data-toggle="tab" href="#brand" aria-expanded="false">
                                        商品品牌
                                    </a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#storehouse" aria-expanded="false">
                                        仓库库位
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="unit" class="tab-pane active">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newUnit">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="unitGrid" class="row"></div>
                                        </div>
                                    </div>
                                </div>
                                <div id="specification" class="tab-pane ">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newSpecification">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="specificationGrid" class="row"></div>
                                        </div>
                                    </div>
                                </div>
                                <div id="color" class="tab-pane">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newColor">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="colorGrid" class="row"></div>
                                        </div>
                                    </div>
                                </div>
                                <div id="brand" class="tab-pane">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newBrand">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="brandGrid" class="row"></div>
                                        </div>
                                    </div>
                                </div>
                                <div id="storehouse" class="tab-pane">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-12">
                                            <div class="table-toolbar">
                                                <a href="javascript:void(0);" class="btn btn-primary " id="newStorehouse">
                                                    <i class="fa  fa-plus"></i> 新增
                                                </a>
                                            </div>
                                            <div id="storehouseGrid" class="row"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="horizontal-space"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="table">
    <div class="col-md-7">
        <table class="table table-striped table-hover table-bordered ">
            <thead>
                <tr role="row">
                    <th>
                        ${data.tabName}名称
                    </th>
                    <th style="width:200px;">
                    </th>
                </tr>
            </thead>
            <tbody>
                {%each data.Datas as it}
                <tr>
                    <td>${it.Name}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn   edit" onclick=" editInfo('${it.Id}','${it.Name}','${data.tabName}',${it.Category},'${data.callback}') "><i class="fa fa-edit"></i> 编辑</a>
                        <a href="javascript:void(0)" class="btn btn-danger  " onclick=" deleteInfo('${it.Id}','${data.tabName}[${it.Name}]','${data.callback}') "><i class="fa fa-trash-o"></i> 删除</a>
                    </td>
                </tr>
                {%/each}
            </tbody>
            {%include  "#tfoot",data}
        </table>
    </div>
</script>
<script type="text/html" id="submitForm">
    <form id="form" class="form-horizontal" name="form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">${tabName}名称</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="名称" name="name" value="${Name}"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="unknownError" style="display: none;">
            <div class="col-md-12">
                <div class="form-group  has-feedback has-error">
                    <div class="col-md-10 col-md-offset-2">
                        <small class="help-block"></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="hidden" class="form-control" name="id" value="${Id}" />
                <input type="hidden" class="form-control" name="category" value="${Category}" />
            </div>
        </div>
    </form>
</script>
<script src="~/assets/js/app/info.js"></script>